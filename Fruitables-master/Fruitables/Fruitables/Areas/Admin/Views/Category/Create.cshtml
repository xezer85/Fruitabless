@using Fruitables.Areas.Admin.ViewModels.CategoryVM
@model CreateCategoryVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>

            <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Kateqoriya adı daxil edin" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-rounded btn-fw">
                    Save
                </button>

                <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                   class="btn btn-secondary btn-rounded btn-fw">
                    Back
                </a>
            </form>
        </div>
    </div>
</div>