@using Fruitables.Areas.Admin.ViewModels.CategoryVM
@model IEnumerable<GetAllCategoryVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <a class="btn btn-success btn-rounded btn-fw" asp-controller="Category" asp-action="Create">
                <i class="mdi mdi-library-plus"></i>
            </a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Settings</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>

                                <td>
                                    <a class="btn btn-info btn-rounded btn-fw" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id"><i class="mdi mdi-alert-circle-outline"></i></a>
                                    <a class="btn btn-primary btn-rounded btn-fw" asp-controller="Category"asp-action="Update"asp-route-id="@item.Id"><i class="mdi mdi-border-color"></i></a>
                                    <form asp-action="Delete"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline">

                                        <button type="submit"
                                                class="btn btn-danger btn-rounded btn-fw"
                                                title="Sil">
                                            <i class="mdi mdi-delete"></i>
                                        </button>

                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
