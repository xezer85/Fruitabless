@using Fruitables.ViewModels
@model RegisterVM

<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 shadow p-4 rounded bg-light">
                <h3 class="mb-4 text-center text-primary">Create an Account</h3>
                <hr />

                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control border-secondary"  />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Surname" class="form-label font-weight-bold"></label>
                            <input asp-for="Surname" class="form-control border-secondary"  />
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label font-weight-bold"></label>
                        <input asp-for="Username" class="form-control border-secondary" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label font-weight-bold"></label>
                        <input asp-for="Email" class="form-control border-secondary"  />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label font-weight-bold"></label>
                        <input asp-for="Password" type="password" class="form-control border-secondary" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label font-weight-bold"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control border-secondary" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill py-2">Register</button>
                    </div>
                </form>

                <p class="text-center mt-3">
                    Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login here</a>
                </p>
            </div>
        </div>
    </div>
</div>